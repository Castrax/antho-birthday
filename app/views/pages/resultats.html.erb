<div class="container">
  <h1 class="category-title">Résultats finaux</h1>
    <div class="card-voted status">
      <div class="infos-voted">
        <div class="infos-title">
          <p class="label-infos-title">🎙 Ci-dessous les résultats du jeu sur Anthoche !</p>
          <p class="nominee-infos">Check ci-dessous pour voir si tu as gagné ou perdu !</p>
        </div>
      </div>
    </div>
    <div class="card-voted results-final-category">
      <div class="infos-voted">
        <div class="infos-title">
          <p class="label-infos-title">🎊 Résultats finaux</p>
        </div>
        <table class="sortable-table">
          <tr>
            <th class="participants">Participants</th>
            <th class="numeric-sort">Score</th>
          </tr>
          <% @users.order(stock: :desc).each do |user| %>
            <tr>
              <td><%= user.prenom %> </td>
                <% user.stock = @stock %>
                <% user.save! %>
            <td><%= user.stock %></td>
          <% end %>
        </table>
      </div>
    </div>
</div>
