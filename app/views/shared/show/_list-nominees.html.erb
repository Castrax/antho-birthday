<p class="show-explain">Clique sur une carte ci-dessous pour voter</p>
<div class="cards">
  <% @nominees.each do |nominee| %>
    <%= link_to category_answers_path(:nominee_id => nominee.id, :category_id => @category.id, :user_id => current_user), method: :post, class: "link-nominee" do %>
      <div class="card">
        <% if nominee.category.title === "Parmi ces marques, laquelle n’a pas été un client d’Anthony ? " || nominee.category.title === "Quel est le surnom qu'il donne à son Boys Club avec Kévin et François ? " || nominee.category.title === "Quel est le nom de son entreprise qu’il a créé en 2019 ?" %>
           <%= cl_image_tag nominee.photo.key, height: 373, width: 280, crop: :pad, class: 'photo-nominee' %>
        <% else %>
          <%= cl_image_tag nominee.photo.key, height: 373, width: 280, crop: :fill, class: 'photo-nominee' %>
        <% end %>
        <div class="infos-nominee">
          <div class="left-infos">
            <div class="name">
              <%= nominee.name %>
            </div>
            <div class="real">
              <%= nominee.real %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
